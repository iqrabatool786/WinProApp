@using WinProApp.Resources
@using Microsoft.AspNetCore.Localization;
@{
    ViewData["Title"] = WebResource.Customer + " " + WebResource.List;
    string allowed = "No";
    if (User.IsInRole("Administrator") || User.IsInRole("Purchase") || User.IsInRole("Manager"))
    {
        allowed = "Yes";
    }
}
<style>
    #tblDataTable_filter > label {
        width: 60%;
    }

        #tblDataTable_filter > label > .form-control-sm {
            width: 87%;
        }

</style>

<div class="row card p-xl-5">
    <div class="col-sm-12">
        <hr />

        <table id="tblDataTable" class="table table-striped table-bordered dataTable table-hover">
            <thead>
                <tr>
                    <th>
                        @WebResource.ID
                    </th>
                    <th>
                        @WebResource.FullName
                    </th>
                    <th>
                        @WebResource.Address
                    </th>
                    <th>
                        @WebResource.MobileNumber
                    </th>
                    <th>
                        @WebResource.PhoneNo
                    </th>
                    <th>
                        @WebResource.Email
                    </th>
                    <th>
                        @WebResource.CompanyName
                    </th>
                    <th style="text-align:right;">
                        @WebResource.Balance
                    </th>
                    <th style="text-align:right;">
                        @WebResource.OpeningBalance
                    </th>
                    <th style="text-align:right;">
                        @WebResource.Credit @WebResource.Limit
                    </th>
                    <th>
                        @WebResource.CRNo
                    </th>
                    <th>
                        @WebResource.VatNo
                    </th>
                    <th>
                        @WebResource.Ledger @WebResource.No
                    </th>
                    <th>
                        @WebResource.Book @WebResource.No
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tfoot></tfoot>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(document).ready(function () {
            bindDataTable(0);
        });

        function bindDataTable(start) {
            if ($.fn.DataTable.isDataTable("#tblDataTable")) {
                $('#tblDataTable').DataTable().destroy();
            }

            var table = $('#tblDataTable').DataTable(
                {
                    serverSide: true,
                    responsive: true,
                    displayStart: start,
                    iDisplayLength: 10,
                    paging: true,
                    order: [[1, 'desc']],
                    lengthMenu: [10, 20, 30, 50, 100],
                    dom: 'Bfrtip',
                    buttons: [
                        {
                            extend: 'copyHtml5',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        {
                            extend: 'excelHtml5',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        {
                            extend: 'csvHtml5',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        {
                            extend: 'pdfHtml5',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        'colvis'
                    ],
                    sAjaxSource: "/Finance/CustomersList/",
                    "columns": [
                        {
                            data: "Id",
                            searchable: true,
                            class: "dtr-control"
                        },
                        {
                            data: "FullName",
                            searchable: true,
                            class: "dtr-control"
                        },
                        {
                            data: "Address",
                            searchable: true,
                            class: "dtr-control"
                        },
                        {
                            data: "MobileNumber",
                            searchable: true,
                            class: "dtr-control"
                        },
                        {
                            data: "PhoneNumber",
                            searchable: true,
                            class: "dtr-control"
                        },
                        {
                            data: "Email",
                            searchable: true,
                            class: "dtr-control txt-right"
                        },
                        {
                            data: "CompanyName",
                            searchable: true,
                            class: "dtr-control txt-right"
                        },
                        {
                            data: "Balance",
                            searchable: true,
                            class: "dtr-control txt-right"
                        },
                        {
                            data: "OpeningBalance",
                            searchable: true,
                            class: "dtr-control txt-right"
                        },
                        {
                            data: "CreditLimit",
                            searchable: true,
                            class: "dtr-control txt-right"
                        },
                        {
                            data: "CRNo",
                            searchable: true,
                            class: "dtr-control"
                        },
                        {
                            data: "VatNo",
                            searchable: true,
                            class: "dtr-control"
                        },
                        {
                            data: "LedgerNo",
                            searchable: true,
                            class: "dtr-control"
                        },
                        {
                            data: "BookNo",
                            searchable: true,
                            class: "dtr-control"
                        }
                    ],
                });

            // new $.fn.dataTable.FixedHeader(table);

        }


        function CurrentPageStart() {
            var table = $('#tblDataTable').DataTable();
            var info = table.page.info();
            return info.start;
        }


       


      

    </script>
}