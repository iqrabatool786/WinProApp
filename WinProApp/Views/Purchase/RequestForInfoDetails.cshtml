@using WinProApp.Resources
@using Microsoft.AspNetCore.Localization;
@model WinProApp.ViewModels.RequestForInfo.DetailsRequestForInfoViewModel;
@{
    ViewData["Title"] = @WebResource.RequestForInformation + " " + @WebResource.Details;
}

<div class="row">
    <div class="col-md-12">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-floating col-md-3">
                    <label for="Date">@WebResource.Date</label>
                    : @Model.ReqDate
                </div>
                <div class="form-floating col-md-3">
                    <label asp-for="Requester">@WebResource.Requester</label>
                    : @Model.Requester
                </div>
                <div class="form-floating col-md-3">
                    <label asp-for="Department">@WebResource.Department</label>
                    : @Model.Department
                </div>

            </div>
            <div class="row">
                <div class="form-floating col-md-8">
                    <label asp-for="Note">@WebResource.Note</label>
                    : @Model.Note
                </div>
            </div>
            <div class="row">
                <div class="form-floating col-md-2">
                    <label asp-for="Approved">@WebResource.Approved</label>
                     : @Model.Approved
                </div>
                <div class="form-floating col-md-2">
                    <label asp-for="CratedDate">@WebResource.CratedDate</label>
                    : @Model.CratedDate
                </div>
                <div class="form-floating col-md-3">
                    <label asp-for="CreatedBy">@WebResource.CreatedBy</label>
                    : @Model.CreatedBy
                </div>
                <div class="form-floating col-md-2">
                    <label asp-for="UpdatedDate">@WebResource.UpdatedDate</label>
                    : @Model.UpdatedDate
                </div>
                <div class="form-floating col-md-3">
                    <label asp-for="UpdatedBy">@WebResource.UpdatedBy</label>
                    : @Model.UpdatedBy
                </div>
            </div>
            <div class="row">
                <div class="form-floating col-md-12">
                    <h4>@WebResource.Items</h4>
                </div>

                <table id="tblItems" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="col-md-3">@WebResource.Description</th>
                            <th class="col-md-3">@WebResource.Reason</th>
                            <th class="col-md-2">@WebResource.Qty</th>
                            <th class="col-md-3">@WebResource.MFCompany</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Description</td>
                                <td>@item.Reason</td>
                                <td>@item.Qty</td>
                                <td>@item.Mfcompany"</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}