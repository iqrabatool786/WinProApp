@{
    ViewData["Title"] = "Finance Dashboard";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<div class="row" style="margin-top:5px;">
    <div class="col-md-12"><h3>Finance Dashboard</h3></div>
     <div class="row col-md-12" style="margin-bottom:25px;">
        <div class="col-md-3"></div>
        <div class="col-md-1" style="text-align:right; padding-top:7px;"><label>Filter By</label> </div>
        <div class="col-md-2">
            <input type="text" name="txtDate1" id="txtDate1" class="form-control datefield" placeholder="From Date" />
        </div>
        <div class="col-md-2">
            <input type="text" name="txtDate2" id="txtDate2" class="form-control datefield" placeholder="To Date" />
        </div>
        <div class="col-md-1">
            <input type="button" id="btnSearch" name="btnSearch" class="btn btn-info" value="Search" />
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-gradient-red">
            <div class="inner">
                <h3>0</h3>

                <p>Total Expences</p>
            </div>
            <div class="icon">
                <i class="fas fa-bullseye"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-green">
            <div class="inner">
                <h3>0</h3>

                <p>Total Sales</p>
            </div>
            <div class="icon">
                <i class="fas fa-search-dollar"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>0</h3>

                <p>Total Vat Receive</p>
            </div>
            <div class="icon">
                <i class="fas fa-angle-double-down"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-gradient-warning">
            <div class="inner">
                <h3>0</h3>

                <p>Total Vat Paid</p>
            </div>
            <div class="icon">
                <i class="fas fa-angle-double-up"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-gradient-orange">
            <div class="inner">
                <h3>0</h3>

                <p>Credit collection</p>
            </div>
            <div class="icon">
                <i class="fa fa-clone"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>


    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>0</h3>

                <p>Supplier Payment</p>
            </div>
            <div class="icon">
                <i class="fas fa-comment-dollar"></i>
            </div>
            <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

</div>