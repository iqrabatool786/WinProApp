@page "/ForgotPassword"
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h3 style="padding:10px 20px; background-color:#93abce;">Forgot your password</h3>
        <h6><strong>Enter your email.</strong></h6>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" placeholder="Your Email" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div style="width:100%; padding:5px; min-height:5px;">&nbsp;</div>
            <button type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:#93abce;">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
